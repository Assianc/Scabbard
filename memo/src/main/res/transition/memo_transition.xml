<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="300"
    android:interpolator="@android:interpolator/fast_out_slow_in"
    android:transitionOrdering="together">
    <changeTransform android:reparent="true"/>
    <changeBounds android:resizeClip="true"/>
    <changeClipBounds/>
    <changeImageTransform/>
    <fade android:fadingMode="fade_in_out">
        <targets>
            <target android:excludeId="@id/memo_title"/>
            <target android:excludeId="@id/memo_content"/>
            <target android:excludeId="@id/memo_detail_update_time"/>
        </targets>
    </fade>
</transitionSet> 