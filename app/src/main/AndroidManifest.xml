<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- 请求的权限声明 -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <!-- Android 10（API 29）及更低版本的权限 -->
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"
        tools:ignore="ScopedStorage" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Android 13（API 33）以上使用这些权限 -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:hardwareAccelerated="true"
        android:icon="@drawable/jianqiao5"
        android:label="@string/app_name"
        android:roundIcon="@drawable/jianqiao5"
        android:supportsRtl="true"
        android:theme="@style/Theme.Scabbard"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- 启动画面 -->
        <activity
            android:name=".StartSplashActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 启动界面 -->
        <activity
            android:name=".StartActivity"
            android:exported="true"
            android:theme="@style/Theme.Scabbard" />

        <!-- 分类功能界面 -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Scabbard" />

        <activity android:name=".PlayerSelectionActivity" />

        <!-- 备忘录功能界面 -->
        <activity
            android:name="com.example.memo.MainActivityMemo"
            android:exported="true"
            tools:replace="android:exported"
            android:theme="@style/Theme.Scabbard" />

        <activity
            android:name="com.example.memo.AddMemoActivity"
            android:exported="false" />

        <activity
            android:name="com.example.memo.MemoDetailActivity"
            android:exported="false" />

        <!--        关于界面-->
        <activity
            android:name=".AboutActivity"
            android:label="关于"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <activity
            android:name=".AppearanceActivity"
            android:exported="false" />

        <!-- 添加主启动器 Activity -->
        <activity-alias
            android:name=".MainActivity.Default"
            android:enabled="true"
            android:exported="true"
            android:icon="@mipmap/jianqiao5"
            android:targetActivity=".StartSplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <!-- 替代图标 -->
        <activity-alias
            android:name=".MainActivity.IconAlternative1"
            android:enabled="false"
            android:exported="true"
            android:icon="@mipmap/jianqiao1"
            android:label="@string/app_name"
            android:targetActivity=".StartSplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity-alias
            android:name=".MainActivity.IconAlternative2"
            android:enabled="false"
            android:exported="true"
            android:icon="@mipmap/jianqiao2"
            android:targetActivity=".StartSplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity-alias
            android:name=".MainActivity.IconAlternative3"
            android:enabled="false"
            android:exported="true"
            android:icon="@mipmap/jianqiao3"
            android:targetActivity=".StartSplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
       </activity-alias>

        <activity-alias
            android:name=".MainActivity.IconAlternative4"
            android:enabled="false"
            android:exported="true"
            android:icon="@mipmap/jianqiao4"
            android:targetActivity=".StartSplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
      </activity-alias>

        <activity-alias
            android:name=".MainActivity.IconAlternative5"
            android:enabled="false"
            android:exported="true"
            android:icon="@mipmap/jianqiao5"
            android:targetActivity=".StartSplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity-alias
            android:name=".MainActivity.IconAlternative6"
            android:enabled="false"
            android:exported="true"
            android:icon="@mipmap/jianqiao6"
            android:targetActivity=".StartSplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
       </activity-alias>

        <activity-alias
            android:name=".MainActivity.IconAlternative7"
            android:enabled="false"
            android:exported="true"
            android:icon="@mipmap/jianqiao7"
            android:targetActivity=".StartSplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
      </activity-alias>

    </application>

</manifest>
