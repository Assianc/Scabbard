<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="个性化图标"
        android:textSize="16sp"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/icon_1"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@mipmap/jianqiao11" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/icon_2"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@mipmap/jianqiao12" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/icon_3"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@mipmap/jianqiao13" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/icon_4"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@mipmap/jianqiao14" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/icon_5"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@mipmap/jianqiao15" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/icon_6"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@mipmap/jianqiao16" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/icon_7"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@mipmap/jianqiao17" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/icon_8"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@mipmap/jianqiao21" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/icon_9"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@mipmap/jianqiao22" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/icon_10"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@mipmap/jianqiao23" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/icon_11"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@mipmap/jianqiao24" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/icon_12"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@mipmap/jianqiao25" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/icon_13"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@mipmap/jianqiao26" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/icon_14"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@mipmap/jianqiao27" />
            </FrameLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:id="@+id/gradient_style_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题渐变样式"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="点击切换标题文字的渐变效果"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/nav_alpha_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不透明度: 90%"
            android:textSize="16sp"/>

        <SeekBar
            android:id="@+id/nav_alpha_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:max="255"/>

        <Button
            android:id="@+id/confirm_alpha_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="确认更改" />

    </LinearLayout>

</LinearLayout> 